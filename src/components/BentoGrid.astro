---
import { PronouceNameTile } from "@/components/islands/PronounceNameTile";
import { FlagTile } from "@/components/islands/FlagTile";
import { KeyboardTile } from "@/components/islands/KeyboardTile";
import { PodcastTile } from "@/components/islands/PodcastTile";
---

<section
  id="bento-grid"
  class="mx-auto grid max-h-[90svh] min-h-[60vh] w-full max-w-[90rem] auto-rows-[minmax(200px,1fr)] grid-cols-1 gap-2 px-4 text-center sm:grid-cols-2 sm:px-6 md:px-8 lg:grid-cols-3 dark:text-background"
>
  <!-- Flag Tile -->
  <div
    class="rounded-2xl bg-[oklch(70%_0.1_263)] p-4 sm:col-span-2 sm:row-span-1 sm:p-6 lg:col-span-2"
  >
    <FlagTile client:visible />
  </div>

  <!-- Pronounce Name Tile -->
  <div
    class="rounded-2xl bg-[oklch(75%_0.08_149)] p-4 sm:col-span-2 sm:row-span-1 sm:p-6 lg:col-span-1"
  >
    <PronouceNameTile client:visible />
  </div>

  <!-- Keyboard Tile -->
  <div
    class="rounded-2xl bg-[oklch(65%_0.12_272)] p-4 sm:col-span-2 sm:p-6 lg:col-span-1 lg:row-span-2"
  >
    <KeyboardTile client:visible />
  </div>

  <!-- Podcast Tile -->
  <div
    class="rounded-2xl bg-[oklch(85%_0.03_282)] p-4 text-primary sm:col-span-1 sm:row-span-1 sm:p-6 lg:col-span-1 dark:text-secondary"
  >
    <PodcastTile client:visible />
  </div>

  <!-- Marathon Tile -->
  <div
    class="flex items-center justify-center rounded-2xl bg-[oklch(40%_0.15_263)] p-4 text-background sm:col-span-1 sm:p-6 lg:col-span-1 lg:row-span-3 dark:text-text"
