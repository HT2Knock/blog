---
import { Image } from "astro:assets";
import avatar from "../assets/avatar_animeted.png";
---

<div id="avatar" class="group relative aspect-square w-40 sm:w-48">
  <div class="relative [clip-path:url(#avatarShape)]">
    <svg class="absolute h-0 w-0 opacity-0">
      <defs>
        <clipPath id="avatarShape" clipPathUnits="objectBoundingBox">
          <path d="M 0,-0.25 L 1,0 L 1,0.75 C 0.75,0.67 0,1.25 0,0.67 Z"></path>
        </clipPath>
      </defs>
    </svg>
    <div
      class="absolute inset-x-[5%] top-[40%] bottom-0 -z-10 rounded-3xl bg-secondary bg-cover bg-center transition-all duration-300 ease-in-out group-hover:blur-lg"
    >
    </div>

    <Image
      src={avatar}
      alt="Ngoc headshot"
      aria-label="Avatar of HT2Knock"
      class="group-hover:drop-shadow[10px_15px_4px_rgba(0,0,0,0.5)] h-full w-full origin-bottom scale-90 object-cover drop-shadow-[5px_5px_2px_rgba(0,0,0,0.5)] transition-transform duration-300 group-hover:scale-110"
    />
  </div>

  <p
    class="absolute right-0 -bottom-2 -z-10 -translate-y-10 font-pixel text-primary opacity-0 transition-all delay-150 duration-300 [transition-timing-function:cubic-bezier(0.47,1.64,0.41,0.8),ease-in-out] group-hover:translate-y-0 group-hover:opacity-100 motion-reduce:transition-none"
  >
    HT2Knock
  </p>
</div>
